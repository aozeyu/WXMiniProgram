.recode_area {
  position: absolute;
  width: 700rpx;
  z-index: 10;
  top: 15vh;
  background-color: #ccc;
  height: 20vh;
  display: flex;
  /* flex-direction: column; */
  justify-content: center;
  align-items: center;
  background-color: #fff;
  box-shadow: 1px 1px 4px #999;
}
.record_row1 {
  display: flex;
  flex-direction: row;
  /* align-items: center; */
  justify-content: center;
  /* background-color: red; */
  width: 100%;
  height: 100%;
}
.record_row2 {
  display: flex;
  /* background-color: #000; */
  flex-direction: column;
  align-items: center;
  flex: 2;
}
.record_row1_time {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 1.1rem;
  color: #454545;
}
.recode {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  color: #fff;
  /* background-color: #; */
}
.recode .record-bgm {
  width: 105rpx;
  height: 105rpx;
  border-radius: 50%;
  background: #6981ff;
}
.recode .record-wave-multiple {
  position: absolute;
  left: 0;
  top: 0;
}
.record-wave-multiple > view {
  display: inline-block;
  background-color: #6981FF;
  border: 0 solid #6981FF;
  position: absolute;
  top: -25rpx;
  left: -27rpx;
  width: 170rpx;
  height: 170rpx;
  border-radius: 100%;
  opacity: 0;
  -webkit-animation: circle-wave-multiple 1.8s cubic-bezier(0.41, 0.4, 0.67, 1) 0s infinite;
  animation: circle-wave-multiple 1.8s cubic-bezier(0.41, 0.4, 0.67, 1) 0s infinite;
}
.record-wave-multiple > view:nth-child(2) {
  -webkit-animation-delay: 0.6s;
  animation-delay: 0.6s;
}
.record-wave-multiple > view:nth-child(3) {
  -webkit-animation-delay: 1.2s;
  animation-delay: 1.2s;
}
@keyframes circle-wave-multiple {
  0% {
    opacity: 0;
    transform: scale(0.4);
  }
  5% {
    opacity: 0.5;
  }
  100% {
    opacity: 0;
    transform: scale(1);
  }
}
.close {
  position: absolute;
  top: 1vh;
  right: 10rpx;
  color: #454545;
}
.playArea {
  display: flex;
  flex-direction: row;
}
.playArea view {
  font-size: 1rem;
  color: #454545;
}
.playArea button {
  font-size: 0.6rem;
  /* height: 20px; */
  width: 220rpx;
  margin: 4px 0;
}
